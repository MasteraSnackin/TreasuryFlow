# ==========================================
# TREASURYFLOW V3.0 ENVIRONMENT VARIABLES
# ==========================================

# Arc Blockchain Configuration
ARC_TESTNET_RPC_URL=https://rpc-testnet.arc.network
ARC_MAINNET_RPC_URL=https://rpc.arc.network
ARC_TESTNET_CHAIN_ID=42170
ARC_MAINNET_CHAIN_ID=42161

# Deployment
DEPLOYER_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Smart Contract Addresses (Fill after deployment)
NEXT_PUBLIC_TREASURY_VAULT_ADDRESS=
NEXT_PUBLIC_AUTO_SWAP_ADDRESS=
NEXT_PUBLIC_USDC_ADDRESS=
NEXT_PUBLIC_EURC_ADDRESS=

# Circle Programmable Wallets
NEXT_PUBLIC_CIRCLE_APP_ID=your_circle_app_id
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_ENTITY_SECRET=your_circle_entity_secret
CIRCLE_WEBHOOK_SECRET=your_circle_webhook_secret

# AI Services
ANTHROPIC_API_KEY=sk-ant-api-key-here

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Database (Optional - for production)
DATABASE_URL=postgresql://user:password@host:5432/treasuryflow
REDIS_URL=redis://default:password@host:6379

# Email Service (Optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@treasuryflow.com

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook

# Security
JWT_SECRET=generate_256_bit_random_string
SESSION_SECRET=generate_256_bit_random_string
ENCRYPTION_KEY=generate_256_bit_random_string

# External APIs (Optional)
COINGECKO_API_KEY=your_coingecko_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
ALCHEMY_API_KEY=your_alchemy_api_key
ARC_EXPLORER_API_KEY=your_arc_explorer_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Feature Flags
ENABLE_MULTI_SIG=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Business Contact
SUPPORT_EMAIL=support@treasuryflow.com
BUSINESS_EMAIL=hello@treasuryflow.com

# Development
NODE_ENV=development
REPORT_GAS=false